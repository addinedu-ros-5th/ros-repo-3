<root main_tree_to_execute="MainTree">
    <BehaviorTree ID="MainTree">
        <ReactiveFallback name="HandleObstacle">
            <ReactiveSequence name="PersonDetectedSequence">
                <IsPersonDetected />
                <StopRobot />
                <Sequence name="PersonNotDetectedSequence">
                    <IsPersonNotDetected />
                    <ResumeRobot />
                </Sequence>
            </ReactiveSequence>
            <Sequence name="ObstacleDetectedSequence">
                <IsObstacleDetected />
                <RecoveryNode number_of_retries="1" name="NavigateRecovery">
                    <PipelineSequence name="NavigateWithReplanning">
                        <RateController hz="1.0">
                            <RecoveryNode number_of_retries="1" name="ComputePathToPose">
                                <ComputePathToPose goal="{goal}" path="{path}"
                                    planner_id="GridBased" />
                                <ClearEntireCostmap name="ClearGlobalCostmap-Context"
                                    service_name="global_costmap/clear_entirely_global_costmap" />
                            </RecoveryNode>
                        </RateController>
                        <ReactiveSequence name="MonitorAndFollowPath">
                            <PathLongerOnApproach path="{path}" prox_len="0.1" length_factor="2.0">
                                <RetryUntilSuccessful num_attempts="1">
                                    <SequenceStar name="CancelingControlAndWait">
                                        <CancelControl name="ControlCancel" />
                                        <Wait wait_duration="3" />
                                    </SequenceStar>
                                </RetryUntilSuccessful>
                            </PathLongerOnApproach>
                            <RecoveryNode number_of_retries="1" name="FollowPath">
                                <FollowPath path="{path}" controller_id="FollowPath" />
                                <ClearEntireCostmap name="ClearLocalCostmap-Context"
                                    service_name="local_costmap/clear_entirely_local_costmap" />
                            </RecoveryNode>
                        </ReactiveSequence>
                    </PipelineSequence>
                    <ReactiveFallback name="RecoveryFallback">
                        <IsStuck />
                        <RoundRobin name="RecoveryActions">
                            <DriveOnHeading dist_to_travel="0.05" speed="0.025" />
                            <Spin spin_dist="1.57" />
                            <Wait wait_duration="1" />
                            <BackUp backup_dist="0.30" backup_speed="0.1" />
                        </RoundRobin>
                    </ReactiveFallback>
                </RecoveryNode>
            </Sequence>
        </ReactiveFallback>
    </BehaviorTree>
</root>